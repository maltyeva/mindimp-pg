<p id="notice"><%= notice %></p>

<h1><%= @article_source.title %></h1>
<blockquote class="blockquote-reverse"><%= @article_source.description %></blockquote>
<blockquote class="blockquote-reverse"><%= @article_source.url %></blockquote>


<div class="row">
	<div class="col-md-4">
		<div class="thumbnail">
		<%= image_tag @article_source.photo(:medium) %>
		</div>
	</div>
	<div class="col-md-8">
		<div class="well">
			<% @article_source.articles.each do |a| %>
			<div class="well"><%= link_to a.title, article_path(a) %></div>
			<% end %>
		</div>
	</div>
</div>



<hr/>
<% if current_user.is_admin? %>
<%= link_to 'Edit Article Source', edit_article_source_path(@article_source), :class => "btn btn-lg" %>
<% end %>
<%= link_to 'Back to Articles', articles_path, :class => "btn btn-lg" %>
