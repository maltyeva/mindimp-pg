<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  </div>

  <div class="form-actions">
  	<%= f.input :title %>
    <%= f.input :abbreviation %>
    <%= f.input :description %>
    <%= f.input :syllabus, :label => "Syllabus", :hint => "Please attach a PDF" %>
    <%= f.association :course_category, :label => "Subject Area" %>
    <%= f.input :session_no, :label => "Number of Weeks" %>
    <%= f.association :book_category, :label => "Book List", :hint => "(Optional)" %>
    <%= f.button :submit %>
  </div>
<% end %>
