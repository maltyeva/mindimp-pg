<h1>Courses</h1>

<%= will_paginate @courses %>


<table id="table_courses" class="datatable-wide table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title </th>
    <th>Abbreviation</th>
    <th>Description </th>

  </tr>
  </thead>
  <tbody>
  <% for course in @courses %>
    <td><%= link_to course.title, course %></td>
    <td><%= link_to course.abbreviation, course %></td>    
    <td><%= link_to course.description, course %></td>
    <% if current_user.is_admin? %>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
  <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %> 


    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= will_paginate @courses %>



<% if current_user.is_admin? %>
<%= link_to 'Add a New Course', new_course_path %>
<% end %> 

