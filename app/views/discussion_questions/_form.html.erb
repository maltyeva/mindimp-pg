<%= simple_form_for(@discussion_question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :question %>
  	<%= f.input :question_number %>
    <%= f.association :book %>
    <%= f.input :visible, :hint => "Check if you'd like the question to be visible on the book page" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
