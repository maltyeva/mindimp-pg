<% if !@discussion_question.book.nil?%>
<h1>All Responses for <%= @discussion_question.book.title + ", Week " + @discussion_question.week_number.to_s %> </h1>
<% else %>
<h1>All Responses for <%= @discussion_question.article.title %> </h1>
<% end %>


<div class="well">
<dd>Discussion Question: </dd>
<dt><%= @discussion_question.question %></dt>
</div>

<table id="table_responses" class="datatable-wide table table-striped table-bordered">
  <thead>
    <tr>
      <th> Response </th>
      <th> Student </th>
      <th> Submitted </th>
    </tr>
  </thead>

  <tbody>
    <% for d in @discussion_question.discussion_responses %>
      <tr>
      <td> <%= link_to d.response, discussion_question_discussion_response_path(@discussion_question, d)%></td>
      <td> <%= d.user.name %></td>
      <td> <%=(d.created_at + 28800).strftime('%B %e, %Y %l:%M %p') %></td>
      <td> <%= link_to 'Destroy Response' , [d.discussion_question, d], method: :delete, data: { confirm: 'Are you sure you want to delete this response?' } %></td>
      <% end %>
      </tr>
  </tbody>
</table>

<br>

