<% provide(:title, @title) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <h4><%= link_to "Profile", @user %></h4>
    </section>
    <section class="stats">
      <%= render 'follow_stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user|%>
     <li>
      <%= image_tag user.profile_photo.url(:thumb) %>
      <%= link_to user.name, user %>
      <%= user.activation_state == "pending" ? "(Pending Activation)" : " " %>
      </li>
      <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>