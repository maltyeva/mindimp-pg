<%= simple_form_for(@user, :html => {:multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= f.input :first_name %>
  <%= f.input :nick_name, :label => "English Name" %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :age %>
  <%= f.input :high_school %>
  <%= f.input :hometown %>
  <%= f.input :bio, :hint => "Please use HTML tags to set paragraphs, bold, italic, etc: http://www.w3schools.com/tags/" %>
  <%= f.input :hobbies, :hint => "Enter hobbies, separated by commas" %>
  <%= f.input :fav_book, :label => "Favorite Book" %>
  <%= f.input :skype_id, :label => "Skype ID", :hint => "Visible only to instructors" %>
  <%= f.input :wechat_id, :label => "WeChat ID", :hint => "Visible on public profile" %>
  <%= f.input :phone, :hint => "ex. +86 123-4567-890" %>
  <%= f.input :parent_name, :hint => "Please enter the name and email of one of your parents" %>
  <%= f.input :parent_email %>
  <%= f.input :profile_photo %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <% if current_user.is_admin? %>
  <%= f.input :college %>
  <%= f.input :major %>
  <% end %>
  
  <%= f.button :submit %>

 </div>
</div>

<% end %>