<h1><%= @user.first_name + " " + @user.last_name %></h1>




<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-8">
        <div class="well">

        <dt>Last Logged In: </dt>
        <%# this takes care of displaying in China Standard Time %>
        <% if @user.last_login.nil? %>
         <dd>(none)</dd>
         <% else %> 
        <dd><%= (@user.last_login + 28800).strftime('%B %e, %Y %l:%M %p')%></dd>
         <% end %>
        <dt>First Name</dt>
        <dd><%= @user.first_name %></dd>

        <dt>Nickname</dt>
        <dd><%= !@user.nick_name.blank? ? @user.nick_name : "(none)" %></dd>
        
        <dt>Last Name</dt>
        <dd><%= @user.last_name %></dd>
        
        
        <dt>Email</dt>
        <dd><%= @user.email %></dd>
        
        <dt>Age</dt>
        <dd><%= @user.age %></dd>

        <% if @user.is_admin? %>
        <dt>Administrator</dt>
        <dd><%= @user.is_admin %></dd>

        <dt>Student</dt>
        <dd><%= @user.is_student %></dd>
        <% end %>
        </div>
    </div>

    <div class="col-md-4">
        <div class="thumbnail">
        <%= image_tag @user.profile_photo.url(:medium) %>
        </div>
    </div>
    
</div>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', root_path %>
