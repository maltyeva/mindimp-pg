<h1><%= @user.first_name + " " + (!@user.nick_name.blank? ? "(#{@user.nick_name}) " : "") + @user.last_name %></h1>
<h4><%= @user.email %></h4>


<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-8">
        <div class="well">
        <dt>About Me</dt>
        <dd><%= @user.bio %></dd>
        <dt>Age</dt>
        <dd><%= @user.age %></dd>
        <dt>High School</dt>
        <dd><%= @user.high_school %></dd>
        <dt>Hometown</dt>
        <dd><%= @user.hometown %></dd>
        </div>


        <% if @user.is_admin? %>
        <dt>Administrator</dt>
        <dd><%= @user.is_admin %></dd>

        <dt>Student</dt>
        <dd><%= @user.is_student %></dd>
        <dt>Last Logged In: </dt>
        <%# this takes care of displaying in China Standard Time %>
        <% if @user.last_login.nil? %>
         <dd>(none)</dd>
         <% else %> 
        <dd><%= (@user.last_login + 28800).strftime('%B %e, %Y %l:%M %p')%></dd>
         <% end %>
        <% end %>

    </div>

    <div class="col-md-4">
        <div class="thumbnail">
        <%= image_tag @user.profile_photo.url(:medium) %>
        </div>
    </div>
    
</div>

</br>
<%= link_to 'Edit Profile', edit_user_path(@user) %> |
<%= link_to 'Back', root_path %>
