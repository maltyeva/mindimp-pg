<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :genre %>
  	<%= f.input :cover %>



  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
