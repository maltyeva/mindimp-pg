<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :lexile_measure %>
    <%= f.input :url, :hint => "Purchase Link" %>
    <%= f.input :page_count %>
    <%= f.input :genre %>
  	<%= f.input :cover %>
    <%= f.association :book_categories, as: :check_boxes  %>




  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
