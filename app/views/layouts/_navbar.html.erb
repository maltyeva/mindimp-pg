<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to site_name, site_url, :class => "navbar-brand", :id => "logo" %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
          <li class="<%= 'active' if current_page?(policies_path) %>"><%= link_to "Policies", policies_path %></li>

                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Using Zoom
          <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Zoom Tutorial", zoom_path %></li>
            <li><%= link_to "Zoom Tour", zoom_tour_path %></li>
            <li><%= link_to "Zoom Tips", zoom_tips_path %></li>
          </ul>
        </li>
         <% if current_user %> 
          <li class="<%= 'active' if current_page?(community_path) %>"><%= link_to "Community", community_path %></li>
           <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> 
          <%= current_user.first_name %>
          <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "My Profile", user_path(current_user.id) %></li>
            <li><%= link_to "Student Portal", student_portal_path %></li>
            <% if current_user.is_admin? %>
            <li><%= link_to "Admin Portal", admin_portal_path %></li>
            <% end %>
            <li><%= link_to "Log Out", :logout, method: :post %></li>
          </ul>
        </li>
        <li> <% unless current_user.profile_photo.nil? %> <%= image_tag current_user.profile_photo.url(:thumb) %>  <% end %></li>
               <% else %> 
                  <li><%= link_to "Log In", :login, method: :get %></li>
               <% end %> 

        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </div><!-- /.navbar -->

<script>
   $('.dropdown-toggle').dropdown()
</script>

