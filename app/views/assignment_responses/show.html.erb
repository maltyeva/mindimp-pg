<p id="notice"><%= notice %></p>

<h1> <%= @assignment_response.user.name + "'s response to " + @assignment_response.course_assignment.title %> </h1>

<div class="well">
	<dt>Response:  </dt>
	<dd><%= @assignment_response.text %></dd>
	<% if !@assignment_response.attachment.nil?%>
		<dt>Attachment: </dt>
		<dd><%= link_to "Download ", @assignment_response.attachment.url, target: "_blank" %></dd>
	<% end %>
	<hr />
	<dt>Submitted: </dt>
	<dd><%= (@assignment_response.submitted + 28800).strftime('%B %e, %Y %l:%M %p')%></dd>
	<dt>Grade: </dt>
	<dd><%= @assignment_response.grade %></dd>
	<dt>Comments: </dt>
	<dd><%= @assignment_response.comments %></dd>
</div>

</br>

<% if current_user.is_admin? %>
<%= link_to 'Grade', edit_course_assignment_assignment_response_path(@course_assignment, @assignment_response) %> |
<%= link_to 'View all responses', course_assignment_assignment_responses_path(@course_assignment) %> | 
<%= link_to 'Back to Assignment', course_assignment_path(@assignment_response.course_assignment) %>
<% end %>
