
<h1><%= @course_category.title %></h1>




<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-md-8">
        <div class="well">
        <dd><%= @course_category.description %></dd>
        </div>
    </div>
    <div class="col-md-4">
    	<h3> Course Offerings </h3>
        <div class="well">
        <% @course_category.courses.each do |c| %>
        	<%= link_to c.title, c%> </br>
        <% end %>
    	</div>
    </div>
    
</div>

<%= link_to 'Edit', edit_course_category_path(@course_category) %> |
