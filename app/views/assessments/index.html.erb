<h1>Assessments: <%= @user.name %></h1>


<table id="table_responses" class="datatable-wide table table-striped table-bordered">
  <thead>
    <tr>
      <th> Course/Program </th>
      <th> Submitted </th>
    </tr>
  </thead>

  <tbody> 
    <% for a in @user.assessments %>
      <tr>
        <% if a.course_session.nil? %>
        <td> <%= link_to "Reading Program", books_path %></td>
        <% else %>
        <td> <%= link_to a.course_session.full_title, course_session_path(a.course_session) %></td>
        <% end %>
      <td> <%= link_to (a.created_at + 28800).strftime('%B %e, %Y %l:%M %p'), user_assessment_path(@user, a) %>
</td>
      <td> <%= link_to 'Destroy Assessment' , [a.user , a], method: :delete, data: { confirm: 'Are you sure you want to delete this assessment?' } %></td>
      <% end %>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'Add an assessment', new_user_assessment_path(@user) %>
